<Window x:Class="BlueDwarf.View.ProxyPickerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Locale.Title}" SizeToContent="WidthAndHeight" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:BlueDwarf.ViewModel"
        xmlns:scanner="clr-namespace:BlueDwarf.Net.Proxy.Scanner;assembly=BlueDwarf.Core"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:ProxyPickerViewModel, IsDesignTimeCreatable=false}" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">

    <StackPanel Orientation="Vertical" Style="{DynamicResource DialogFrame}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Style="{DynamicResource DialogTextBlock}" Text="{Binding Locale.ProxyPageLabel}"/>
            <ComboBox Width="200" ItemsSource="{Binding ProxyPages}" DisplayMemberPath="Name" SelectedItem="{Binding ProxyPage}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Style="{DynamicResource DialogTextBlock}" >
                <Run Text="{Binding Locale.ProxyPageUrlLabel, Mode=OneWay}"/>
                <Hyperlink NavigateUri="{Binding ProxyPage.PageUri, Mode=OneWay}" RequestNavigate="OnHyperlinkRequestNavigate">
                    <TextBlock Text="{Binding ProxyPage.PageUri, Mode=OneWay}"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>
        <TextBlock Style="{DynamicResource DialogTextBlock}" Text="{Binding Locale.PickProxyLabel}"/>
        <ListView ItemsSource="{Binding ProxyServers}" Height="150" SelectedItem="{Binding ProxyServer}" >
            <ListView.View>
                <GridView >
                    <GridViewColumn Header="Proxy" Width="200" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate >
                                <TextBlock>
                                    <Run Text="{Binding HostOrAddress, Mode=OneTime}"/><Run Text=":"/><Run Text="{Binding Port, Mode=OneTime}"/>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Window>
