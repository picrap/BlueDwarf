<Window x:Class="BlueDwarf.View.ConfigurationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Blue Dwarf" 
        xmlns:tb="http://www.hardcodet.net/taskbar"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" Icon="/BlueDwarf;component/Resources/key.ico"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewModel="clr-namespace:BlueDwarf.ViewModel"
        xmlns:controls="clr-namespace:BlueDwarf.Controls"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModel:ConfigurationViewModel, IsDesignTimeCreatable=false}" WindowStyle="ToolWindow"
        Visibility="Hidden">
    <Grid Margin="8" Width="400">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <tb:TaskbarIcon IconSource="/Resources/key.ico" DoubleClickCommand="{controls:Command {Binding Restore}}">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Configure" Command="{controls:Command {Binding Restore}}" FontWeight="Bold" />
                    <MenuItem Header="Exit" Command="{controls:Command {Binding Exit}}" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
        <controls:CloseButton Command="{controls:Command {Binding Minimize}}" />
        <controls:Hider Show="{Binding Show, Mode=OneWay}" />
        <Image Grid.Column="0" Grid.Row="0" Source="/Resources/passe100.png" Height="100" VerticalAlignment="Top" Margin="0,0,8,0" RenderOptions.BitmapScalingMode="Fant"/>
        <StackPanel Grid.Column="1" Orientation="Vertical" >
            <Grid>
                <Expander IsExpanded="true">
                    <Expander.Header>
                        <TextBlock Text="Proxy tunnel configuration" Style="{DynamicResource SectionTitleTextBlock}"/>
                    </Expander.Header>
                    <StackPanel Orientation="Vertical" Margin="24,0,0,0">
                        <TextBlock Style="{DynamicResource LegendTextBlock}" Text="This is where you go out"/>
                        <Grid Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="0" Grid.Row="0" Style="{DynamicResource DialogTextBlock}" Text="Local proxy:" />
                            <controls:UrlBox Grid.Column="1" Grid.Row="0" Style="{DynamicResource DialogUrlBox}" Uri="{Binding LocalProxy, Mode=TwoWay}" />

                            <TextBlock Grid.Column="0" Grid.Row="1" Style="{DynamicResource DialogTextBlock}" Text="Remote proxy:" />
                            <controls:UrlBox Grid.Column="1" Grid.Row="1" Style="{DynamicResource DialogUrlBox}" Uri="{Binding RemoteProxy, Mode=TwoWay}" />

                            <TextBlock Grid.Column="0" Grid.Row="2" Style="{DynamicResource DialogTextBlock}" Text="Test URL:" />
                            <TextBox Grid.Column="1" Grid.Row="2" Style="{DynamicResource DialogTextBox}" Text="{Binding TestTarget, Mode=TwoWay}" />

                        </Grid>
                    </StackPanel>
                </Expander>
                <Button Content="Summon the wizard!" HorizontalAlignment="Right" VerticalAlignment="Top" Command="{controls:Command {Binding AnalyzeProxy}}" />
            </Grid>
            <Expander IsExpanded="false">
                <Expander.Header>
                    <TextBlock Text="Proxy server configuration" Style="{DynamicResource SectionTitleTextBlock}"/>
                </Expander.Header>
                <StackPanel Orientation="Vertical" Margin="24,0,0,0">
                    <TextBlock Style="{DynamicResource LegendTextBlock}" Text="This is where you configure the local proxy for your browser and other applications" TextWrapping="Wrap" />
                    <Grid Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Column="0" Grid.Row="0" Style="{DynamicResource DialogTextBlock}" 
                       Text="SOCKS 4 proxy server port:" />
                        <TextBox Grid.Column="1" Grid.Row="0"  Style="{DynamicResource DialogTextBox}" IsEnabled="{Binding CanSetSocksListeningPort}"
                     Text="{Binding SocksListeningPort, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </StackPanel>
            </Expander>
            <Expander IsExpanded="false">
                <Expander.Header>
                    <TextBlock Text="Local proxy keepalive" Style="{DynamicResource SectionTitleTextBlock}"/>
                </Expander.Header>
                <Grid Margin="24,4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="3" Style="{DynamicResource DialogTextBlock}" 
                       Text="Keepalive URL 1:" />
                    <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Vertical">
                        <controls:UrlBox Style="{DynamicResource DialogUrlBox}" Uri="{Binding KeepAlive1, Mode=TwoWay}" AllowedSchemes="http;https"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{DynamicResource DialogTextBlock}" Text="Refresh interval:" />
                            <TextBox Style="{DynamicResource DialogInnerTextBox}" 
                                     Text="{Binding KeepAlive1Interval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="30" />
                            <TextBlock Style="{DynamicResource DialogTextBlock}" Text="s" />
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Grid.Column="0" Grid.Row="4" Style="{DynamicResource DialogTextBlock}" 
                       Text="Keepalive URL 2:" />
                    <StackPanel Grid.Column="1" Grid.Row="4" Orientation="Vertical">
                        <controls:UrlBox Style="{DynamicResource DialogUrlBox}" Uri="{Binding KeepAlive2, Mode=TwoWay}" AllowedSchemes="http;https" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{DynamicResource DialogTextBlock}" Text="Refresh interval:" />
                            <TextBox Style="{DynamicResource DialogInnerTextBox}" 
                                     Text="{Binding KeepAlive2Interval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="30" />
                            <TextBlock Style="{DynamicResource DialogTextBlock}" Text="s" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Expander>
            <controls:RefreshWebBrowser Width="1" Height="1" Opacity="0.1" Source="{Binding KeepAlive1, Mode=OneWay}" AppendRandomQueryParameter="True" RefreshInterval="{Binding KeepAlive1Interval,Mode=OneWay}"/>
            <controls:RefreshWebBrowser Width="1" Height="1" Opacity="0.1" Source="{Binding KeepAlive2, Mode=OneWay}" AppendRandomQueryParameter="True" RefreshInterval="{Binding KeepAlive2Interval,Mode=OneWay}" />
        </StackPanel>
    </Grid>
</Window>
