<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="DialogElement" TargetType="FrameworkElement">
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <Style x:Key="DialogTextBlock" TargetType="TextBlock" BasedOn="{StaticResource DialogElement}">
        <Setter Property="Margin" Value="0,3,8,4"/>
    </Style>

    <Style x:Key="DialogTextBox" TargetType="TextBox" BasedOn="{StaticResource DialogElement}">
    </Style>

    <Style x:Key="DialogInnerTextBox" TargetType="TextBox" BasedOn="{StaticResource DialogElement}">
        <Setter Property="Margin" Value="0,3,8,4"/>
    </Style>

    <Style x:Key="SectionTitleTextBlock" TargetType="TextBlock" >
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="DialogButton" TargetType="Button">
        <Setter Property="Margin" Value="8,0,0,0"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>

</ResourceDictionary>
